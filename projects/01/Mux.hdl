/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
	Not(in=sel,out=r1);
	And(a=a,b=r1,out=r2);
	And(a=sel,b=b,out=r3);
	Or(a=r2,b=r3,out=out);
}